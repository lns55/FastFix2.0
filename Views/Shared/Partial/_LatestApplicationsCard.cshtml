@model List<FastFix2._0.Areas.Applications.NewApplications>

<div class="card active-users">
    <div class="card-header border-0">
        <h4 class="card-title">Latest applications</h4>
        <a class="heading-elements-toggle"><i class="fa fa-ellipsis-v font-medium-3"></i></a>
        <div class="heading-elements">
            <ul class="list-inline mb-0">
                <li><a data-action="reload"><i class="feather icon-rotate-cw"></i></a></li>
            </ul>
        </div>
    </div>
    <div class="card-content">
        <div id="audience-list-scroll" class="table-responsive position-relative">
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Car model</th>
                        <th>Description</th>
                        <th>Date</th>
                        <th>More</th>
                    </tr>
                </thead>
                <tbody>
                   @foreach (var app in Model)
                   {
                            <tr>
                                <td class="align-middle">
                                    <span>@app.IssueTitle</span>
                                </td>
                                <td class="align-middle">
                                    <span>@app.Car</span>
                                </td>
                                <td class="align-middle">
                                    <span>@app.Description</span>
                                </td>
                                <td class="align-middle">
                                    <span>@app.RepairTill</span>
                                </td>
                                <td class="align-middle">
                                    <a class="btn btn-outline-primary btn-block" asp-controller="MyApplications" asp-action="SeeAnswers" asp-route-id="@app.Id">Answers</a>
                                </td>
                            </tr>
                   }
                </tbody>
            </table>
        </div>
    </div>
</div>
