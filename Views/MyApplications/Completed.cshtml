@model List<FastFix2._0.Areas.Applications.CompletedApplications>
@{
    ViewData["Title"] = "Completed Applications";
    Layout = "~/Views/MyApplications/_MyApplicationLayout/_MyApplicationLayout.cshtml";
}

<body class="vertical-layout vertical-menu 2-column   fixed-navbar" data-open="click" data-menu="vertical-menu" data-col="2-column">
    <div class="app-content content">
        <div class="content-overlay">
        </div>
        <div class="content-wrapper">
            <div class="content-header row">
            </div>
            <div class="content-body">
                <div class=" col-lg-12">
                    <div class="card active-users">
                        <div class="card-header border-0">
                            <h4 class="card-title">Completed Applications</h4>
                            <a class="heading-elements-toggle"><i class="fa fa-ellipsis-v font-medium-3"></i></a>
                            <div class="heading-elements">
                                <ul class="list-inline mb-0">
                                    <li><a data-action="reload"><i class="feather icon-rotate-cw"></i></a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="card-content">
                            <div id="audience-list-scroll" class="table-responsive position-relative">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Issue Title</th>
                                            <th>Repair Date</th>
                                            <th>Description</th>
                                            <th>Learn more</th>
                                        </tr>
                                    </thead>
                                    @foreach (var app in Model)
                                    {
                                        <tbody id="table">
                                            <tr>
                                                <td class="align-middle">
                                                    <span>@app.IssueTitle</span>
                                                </td>
                                                <td class="align-middle">
                                                    <span>@app.RepairTill</span>
                                                </td>
                                                <td class="align-middle">
                                                    <span>@app.Description</span>
                                                </td>
                                                <td class="align-middle">
                                                    <a asp-action="SeeApp" asp-controller="MyApplications" asp-route-id="@app.Id" class="btn white bg-success">Learn More</a>
                                                </td>
                                            </tr>
                                        </tbody>
                                    }
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>