@model FastFix2._0.ViewModels.Identity.RegistrationUserViewModel
@{
    ViewData["Title"] = "Registration";
    Layout = "~/Views/Home/_HomeLayout/_HomeLayout.cshtml";
}

<div class="app-content content">
    <div class="content-wrapper">
        <div class="content-body">
            <section class="row flexbox-container">
                <div class="col-12 d-flex align-items-center justify-content-center">
                    <div class="col-lg-4 col-md-8 col-10 box-shadow-2 p-0">
                        <div class="card border-grey border-lighten-3 px-1 py-1 m-0">
                            <div class="card-header border-0 pb-0">
                                <div class="card-title text-center">
                                    <a asp-controller="Home" asp-action="Index">
                                        <div class="p-1"><img src="~/images/logo/fastfix_logo.png" alt="branding logo"></div>
                                        <h2>FastFix</h2>
                                    </a>
                                </div>
                                <h6 class="card-subtitle line-on-side text-muted text-center font-small-3 pt-2">
                                    <span>
                                        Login
                                        WITH
                                    </span>
                                </h6>
                            </div>
                            <div class="card-content">
                                <div class="card-body text-center">
                                    <a href="#" class="btn btn-social mb-1 mr-1 btn-outline-facebook"><span class="fa fa-facebook"></span> <span class="px-1">facebook</span> </a>
                                    <a href="#" class="btn btn-social mb-1 btn-outline-google"><span class="fa fa-google-plus font-medium-4"></span> <span class="px-1">google</span> </a>
                                </div>
                                <p class="card-subtitle line-on-side text-muted text-center font-small-3 mx-2 my-1">
                                    <span>
                                        OR Register using
                                        Email
                                    </span>
                                </p>
                                <div class="card-body pt-0">
                                    <form class="form-horizontal" asp-action="Registration" asp-antiforgery="true">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                        <fieldset class="form-group floating-label-form-group">
                                            <label for="user-name">User Name</label>
                                            <input asp-for="UserName" class="form-control" id="user-name" placeholder="User Name">
                                            <div asp-validation-for="UserName" class="text-danger"></div>
                                        </fieldset>
                                        <fieldset class="form-group floating-label-form-group">
                                            <label for="user-email">Your Email Address</label>
                                            <input asp-for="Email" class="form-control" id="user-email" placeholder="Your Email Address">
                                            <div asp-validation-for="Email" class="text-danger"></div>
                                        </fieldset>
                                        <fieldset class="form-group floating-label-form-group">
                                            <label for="user-email">Confirm Your Email Address</label>
                                            <input asp-for="EmailConfirm" class="form-control" id="user-email" placeholder="Confirm Your Email Address">
                                            <div asp-validation-for="EmailConfirm" class="text-danger"></div>
                                        </fieldset>
                                        <fieldset class="form-group floating-label-form-group mb-1">
                                            <label for="user-password">Enter Password</label>
                                            <input asp-for="Password" class="form-control" id="user-password" placeholder="Enter Password">
                                            <div asp-validation-for="Password" class="text-danger"></div>
                                        </fieldset>
                                        <fieldset class="form-group floating-label-form-group mb-1">
                                            <label for="user-password">Enter Password</label>
                                            <input asp-for="PasswordConfirm" class="form-control" id="user-password" placeholder="Confirm Your Password">
                                            <div asp-validation-for="PasswordConfirm" class="text-danger"></div>
                                        </fieldset>
                                        <div class="form-group row">
                                            <div class="col-sm-6 col-12 text-center text-sm-left pr-0">
                                                <fieldset>
                                                    <input asp-for="RememberMe" type="checkbox" id="remember-me" class="chk-remember">
                                                    <label asp-for="RememberMe" for="remember-me"> Remember Me</label>
                                                </fieldset>
                                            </div>
                                            <div class="col-sm-11 col-12 text-center text-sm-left pr-0">
                                                <fieldset>
                                                    <input asp-for="IsCarRepair" type="checkbox" id="is-car-repair" class="chk-remember">
                                                    <label asp-for="IsCarRepair" for="is-car-repair"> <b>Check if you want to register as car repair shop</b></label>
                                                </fieldset>
                                            </div> 
                                            <div class="col-12 text-center text-sm-right"><a asp-controller="Home" asp-action="ForgotPassword" class="card-link">Forgot Password?</a></div>
                                        </div>
                                        <button type="submit" class="btn btn-outline-primary btn-block"><i class="feather icon-user"></i> Register</button>
                                    </form>
                                </div>
                                <div class="card-body pt-0">
                                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary btn-block"><i class="feather icon-home"></i> Home</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
